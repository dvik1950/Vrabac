<h1>Uloguj se</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Šifra" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Uloguj se", class: "btn btn-default" %>
    <% end %>

    <center><p>Još uvek nemaš nalog? <%= link_to "Registruj se ovde!", signup_path %></p></center>
  </div>
</div>